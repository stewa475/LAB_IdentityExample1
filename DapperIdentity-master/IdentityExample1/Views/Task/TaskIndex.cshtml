
@model Tasks

@{
    ViewData["Title"] = "TaskIndex";
    List<Tasks> tasks = (List<Tasks>)ViewData["Tasks"];
    List<Tasks> SearchResults = (List<Tasks>)ViewData["Search Results"];
}

<h1>TASK LIST</h1>

