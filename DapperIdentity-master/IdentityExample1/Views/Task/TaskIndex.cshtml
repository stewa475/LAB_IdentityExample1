<br />
<p><a href="/Task/AddTask" class="btn btn-success" role="button">Add Task</a></p>
<br /> 
@if (TempData["UserMsg"] != null)
{
<p>@TempData["UserMsg"]</p>
}
<p>CURRENT TASKS</p>
<p>______________________________________________________________________________________________________________________________________________________________________</p>
<table style="width:40%">
    <tr>
        <th>Mark Complete</th>
        <th>Tasks</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    @foreach (Tasks t in tasks)
    {
        <tr>
            <td>
                <form action="\task\Complete" method="Post">
                    @if (t.Complete == false)
                    {
                        <input asp-for="Complete" type="submit" data-val="true" name="Complete" value="Complete" class="btn btn-primary" />
                        <input asp-for="Id" type="hidden" value="@t.Id" /><br />
                    }
                    else
                    {
                        <input asp-for="Complete" type="submit" data-val="true" name="Complete" value="Un-Complete" class="btn btn-primary" />
                        <input asp-for="Id" type="hidden" value="@t.Id" /><br />
                    }


                </form>
               
            </td>
            <td>
                <a href="/Task/Detail/@t.Id">@t.TaskTitle</a>
            </td>
            <td>
                <a href="/Task/EditTasks/@t.Id" class="btn btn-primary">Edit</a>&nbsp;
            </td>
            <td>
                <a href="/Task/DeleteTasks/@t.Id" class="btn btn-primary">Delete</a>&nbsp;<br />
            </td>
        </tr>
    }
</table>

